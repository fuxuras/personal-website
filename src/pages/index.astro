--- 
import Layout from "../layouts/Layout.astro";
import { SOCIAL_LINKS } from "../consts.js";
import { Icon } from "astro-icon/components";
import Container from "../components/Container.astro";
import Frame from "../components/Frame.astro";
 
---

<Layout title="Homepage">
    <Container>
        <div class="stack">
            <Frame class="p-5 space-y-3">
                <div class="caption">Profile</div>
                <div class="flex flex-wrap items-start justify-between gap-4">
                    <div class="space-y-2">
                        <h1 class="text-2xl font-semibold tracking-tight">Furkancan Okal</h1>
                        <p class="text-sm text-muted-foreground">
                            Java Spring Boot and Go enjoyer.
                        </p>
                        <p class="text-sm text-muted-foreground">Lifelong learner.</p>
                    </div>
                    <div class="ml-auto w-full sm:w-auto flex flex-col items-start sm:items-end gap-3 text-left sm:text-right">
                      <div class="flex flex-col items-stretch gap-2">
                        <span class="text-[10px] uppercase tracking-[0.3em] font-mono text-muted-foreground text-center sm:text-right">
                          Appearance
                        </span>
                        <div class="flex items-center gap-3 sm:justify-end">
                          <span class="text-[10px] uppercase tracking-[0.25em] font-mono text-muted-foreground">
                            Light
                          </span>
                          <button
                            type="button"
                            data-theme-switch
                            aria-pressed="false"
                            class="theme-switch"
                          >
                            <span class="theme-switch-thumb"></span>
                          </button>
                          <span class="text-[10px] uppercase tracking-[0.25em] font-mono text-muted-foreground">
                            Dark
                          </span>
                        </div>
                      </div>
                      <div class="flex flex-col items-stretch gap-2">
                        <span class="text-[10px] uppercase tracking-[0.3em] font-mono text-muted-foreground text-center sm:text-right">
                          Interested in
                        </span>
                        <div class="flex items-center gap-3 sm:justify-end">
                          <span class="text-[10px] uppercase tracking-[0.25em] font-mono text-muted-foreground">
                            Professional
                          </span>
                          <button
                            type="button"
                            data-audience-switch
                            aria-pressed="false"
                            class="audience-switch"
                          >
                            <span class="audience-switch-thumb"></span>
                          </button>
                          <span class="text-[10px] uppercase tracking-[0.25em] font-mono text-muted-foreground">
                            Personal
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </Frame>

            <div class="border-y border-border" aria-hidden="true"></div>

            <Frame class="p-5 space-y-4">
                <div class="caption">Coordinates</div>
                <h2 class="text-lg font-semibold tracking-tight">Let's Connect</h2>
                <div class="flex flex-wrap gap-3">
                    {SOCIAL_LINKS.map(link => (
                        <a href={link.href} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 border border-border px-3 py-2 text-xs uppercase tracking-[0.25em] font-mono text-muted-foreground hover:bg-muted hover:text-foreground transition-colors">
                            <Icon name={link.icon} class="w-4 h-4" />
                            <span>{link.name}</span>
                        </a>
                    ))}
                </div>
            </Frame>

            <div class="border-y border-border" aria-hidden="true"></div>

            <Frame class="p-0">
                <div class="p-5 space-y-3 pb-0">
                <div class="caption">Writes</div>
                <h2 class="text-lg font-semibold tracking-tight">Came for the technical writings?</h2>
                </div>
                <div class="p-5">
                  <a href="/blog" class="cta-link">All writes</a>
                </div>
            </Frame>

            <div class="border-y border-border" aria-hidden="true"></div>

            <Frame class="p-5 space-y-3">
              <div class="caption">Projects</div>
              <h2 class="text-lg font-semibold tracking-tight">Curious about my personal coding projects?</h2>
              <a href="/projects" class="cta-link">All projects</a>
            </Frame>
            <div class="border-y border-border" aria-hidden="true"></div>
            <Frame class="p-5 space-y-3">
              <div class="caption">Biography</div>
              <h2 class="text-lg font-semibold tracking-tight">Curious about where Iâ€™ve worked before?</h2>
              <a href="/biography" class="cta-link">View biography</a>
            </Frame>

            <div class="border-y border-border" aria-hidden="true"></div>

            <Frame class="p-0 border-b-0" data-audience="personal">
                <div class="p-5 space-y-3 pb-0">
                <div class="caption">Duvar</div>
                <h2 class="text-lg font-semibold tracking-tight">Curious about my personal thoughts?</h2>
                </div>
                <div class="p-5">
                  <a href="/feed" class="cta-link">See more</a>
                </div>
            </Frame>
        </div>
    </Container>
</Layout>
