---
import Layout from '../../layouts/Layout.astro';
import QuoteCard from '../../components/QuoteCard.astro';
import { getCollection } from "astro:content";
import Container from '../../components/Container.astro';

const quotes = (await getCollection('commonplace'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()); // Sort by pubDate
---

<Layout title="Commonplace">
    <Container>
        <div class="stack">
            <div class="frame p-5 space-y-2">
                <div class="caption">Archive</div>
                <div class="text-2xl font-semibold tracking-tight">Commonplace</div>
                <p class="text-sm text-muted-foreground max-w-3xl">
                  A collection of quotes, passages, and ideas from books, people, and my own thoughts.
                </p>
            </div>
            <div class="frame divide-y divide-border border-t border-border border-b-0">
                {quotes.map(quote => (
                    <QuoteCard quote={quote} />
                ))}
            </div>
        </div>
    </Container>
</Layout>
