---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";

const milestones = [
    {
        time: "2025-06",
        title: "Graduated from University",
        description: "Yay! Welcome to world of unemployment",
    },
    {
        time: "2025-02",
        title: "Started 5 month internship at Kentkart",
        description: "Met with wonderful people in here. Thanks for everyone",
    },
    {
        time: "2024-08",
        title: "Started 1 month internship at Enoca",
        description: "Just an ordinary boring internship",
    },
    {
        time: "2024-07",
        title: "Started 1 month internship at PI Works",
        description: "Amazing people but they writing .Net",
    },
    {
        time: "2023-11",
        title: "HomeServer Adventure",
        description: "I must see this was coming",
    },
    {
        time: "2023-09",
        title: "Met with ArchLinux",
        description: "Canonical event i guess.",
    },
];
---

<Layout title="Biography">
    <Container>
        <div class="space-y-10">
            <div class="font-semibold text-black dark:text-white text-xl animate">
                Biography
            </div>
            <div class="animate">
                {
                    milestones.map((milestone) => (
                        <div class="flex">
                            <div class="mt-2 grid size-5 place-items-center rounded-full border border-border bg-background shadow-lg">
                                <div class="rounded-full bg-primary size-2 z-10" />
                            </div>
                            
                            <div class="pb-10 pl-8">
                                <h3 class="text-lg font-semibold text-foreground">
                                    {milestone.title}
                                </h3>
                                <time class="block mb-2 text-sm font-normal leading-none text-muted-foreground">
                                    {milestone.time}
                                </time>
                                <p class="text-md text-muted-foreground">
                                    {milestone.description}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </Container>
</Layout>
