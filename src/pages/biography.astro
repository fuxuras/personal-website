---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";

const milestones = [
    {
        time: "2026-02",
        title: "Started Computer Engineering MSc at Ege University",
        description: "Joined the master's program in Computer Engineering.",
        education: true,
    },
    {
        time: "2026-01",
        title: "Started work in Huawei!",
        description: "Big Yay! What a awesome place to work",
        experience: true,
    },
    {
        time: "2025-06",
        title: "Graduated from Manisa Celal Bayar University",
        description: "Graduated with a 3.47 GPA as an honor student.",
        education: true,
    },
    {
        time: "2025-02",
        title: "Started 5 month internship at Kentkart",
        description: "Met with wonderful people in here. Thanks for everyone",
        experience: true,
    },
    {
        time: "2024-08",
        title: "Started 1 month internship at Enoca",
        description: "Just an ordinary boring internship",
        experience: true,
    },
    {
        time: "2024-07",
        title: "Started 1 month internship at PI Works",
        description: "Amazing people but they writing .Net",
        experience: true,
    },
    {
        time: "2023-11",
        title: "HomeServer Adventure",
        description: "I must see this was coming",
    },
    {
        time: "2023-09",
        title: "Met with ArchLinux",
        description: "Canonical event i guess.",
    },
];
---

<Layout title="Biography">
    <Container>
        <div class="stack">
            <div class="frame p-5 space-y-2">
                <div class="caption">Timeline</div>
                <div class="text-2xl font-semibold tracking-tight">Biography</div>
            </div>
            <div class="frame border-b-0">
                {
                    milestones.map((milestone, index) => (
                        <div class={`grid gap-4 md:grid-cols-[140px_1fr] border-b border-border px-5 py-5 last:border-b-0 ${index === 0 ? "border-t border-border" : ""}`}>
                            <time class="text-xs uppercase tracking-[0.3em] font-mono text-muted-foreground">
                                {milestone.time}
                            </time>
                            <div class="space-y-2">
                                <div class="flex flex-wrap items-center gap-2">
                                    <h3 class="text-base font-semibold text-foreground">
                                        {milestone.title}
                                    </h3>
                                    {(milestone.experience || milestone.education) && (
                                        <div class="ml-auto flex flex-wrap items-center gap-2">
                                            {milestone.experience && (
                                                <span class="inline-flex items-center border border-border px-2 py-1 text-[10px] font-mono uppercase tracking-[0.25em] text-muted-foreground">
                                                    Experience
                                                </span>
                                            )}
                                            {milestone.education && (
                                                <span class="inline-flex items-center border border-border px-2 py-1 text-[10px] font-mono uppercase tracking-[0.25em] text-muted-foreground">
                                                    Education
                                                </span>
                                            )}
                                        </div>
                                    )}
                                </div>
                                <p class="text-sm text-muted-foreground">
                                    {milestone.description}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </Container>
</Layout>
