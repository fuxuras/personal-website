---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, lang = "en" } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
        <title>{title}</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <script is:inline>
            let storedTheme = null;
            try {
                storedTheme = localStorage.getItem('theme');
            } catch (err) {
                storedTheme = null;
            }
            if (storedTheme === 'dark') {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
                try {
                    if (!storedTheme) {
                        localStorage.setItem('theme', 'light');
                    }
                } catch (err) {
                    // ignore storage write errors
                }
            }
        </script>
        <script is:inline>
            if (typeof localStorage !== 'undefined') {
                const audienceKey = 'audience_mode';
                const storedAudience = localStorage.getItem(audienceKey) || 'professional';
                document.documentElement.dataset.audience = storedAudience;
            }
        </script>
        <script is:inline>
            if (typeof localStorage !== 'undefined') {
                const tokenKey = 'viewer_token';
                if (!localStorage.getItem(tokenKey)) {
                    const uuid = typeof crypto !== 'undefined' && crypto.randomUUID
                        ? crypto.randomUUID()
                        : `${Date.now()}-${Math.random().toString(16).slice(2)}`;
                    localStorage.setItem(tokenKey, uuid);
                }
            }
        </script>
    </head>
    <body class="relative min-h-screen">
        <div class="relative z-10 site-frame">
            <Header />
            <main>
                <slot />
            </main>
            <Footer />
        </div>
        <script is:inline>
            const initPreferences = () => {
                let storage = null;
                try {
                    storage = localStorage;
                } catch (err) {
                    storage = null;
                }

                const themeKey = 'theme';
                const themeSwitch = document.querySelector('[data-theme-switch]');

                const setTheme = (value) => {
                    if (value === 'dark') {
                        document.documentElement.classList.add('dark');
                    } else {
                        document.documentElement.classList.remove('dark');
                    }
                    if (themeSwitch) {
                        const isDark = value === 'dark';
                        themeSwitch.classList.toggle('is-on', isDark);
                        themeSwitch.setAttribute('aria-pressed', isDark ? 'true' : 'false');
                    }
                };

                const storedTheme = storage?.getItem(themeKey)
                    || (document.documentElement.classList.contains('dark') ? 'dark' : 'light');
                setTheme(storedTheme);

                themeSwitch?.addEventListener('click', () => {
                    const current = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
                    const next = current === 'dark' ? 'light' : 'dark';
                    storage?.setItem(themeKey, next);
                    setTheme(next);
                });

                const audienceKey = 'audience_mode';
                const switchButton = document.querySelector('[data-audience-switch]');

                const setAudience = (value) => {
                    document.documentElement.dataset.audience = value;
                    if (switchButton) {
                        const isPersonal = value === 'personal';
                        switchButton.classList.toggle('is-on', isPersonal);
                        switchButton.setAttribute('aria-pressed', isPersonal ? 'true' : 'false');
                    }
                };

                const storedAudience = storage?.getItem(audienceKey)
                    || document.documentElement.dataset.audience
                    || 'professional';
                setAudience(storedAudience);

                switchButton?.addEventListener('click', () => {
                    const current = document.documentElement.dataset.audience || 'professional';
                    const next = current === 'professional' ? 'personal' : 'professional';
                    storage?.setItem(audienceKey, next);
                    setAudience(next);
                });
            };

            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', initPreferences);
            } else {
                initPreferences();
            }
        </script>
    </body>
</html>
