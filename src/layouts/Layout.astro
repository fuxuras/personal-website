---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
        <title>{title}</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <script is:inline>
            const storedTheme = typeof localStorage !== 'undefined' ? localStorage.getItem('theme') : null;
            if (storedTheme === 'dark') {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        </script>
        <script is:inline>
            if (typeof localStorage !== 'undefined') {
                const audienceKey = 'audience_mode';
                const storedAudience = localStorage.getItem(audienceKey) || 'professional';
                document.documentElement.dataset.audience = storedAudience;
            }
        </script>
        <script is:inline>
            if (typeof localStorage !== 'undefined') {
                const tokenKey = 'viewer_token';
                if (!localStorage.getItem(tokenKey)) {
                    const uuid = typeof crypto !== 'undefined' && crypto.randomUUID
                        ? crypto.randomUUID()
                        : `${Date.now()}-${Math.random().toString(16).slice(2)}`;
                    localStorage.setItem(tokenKey, uuid);
                }
            }
        </script>
    </head>
    <body class="relative min-h-screen">
        <div class="relative z-10 site-frame">
            <Header />
            <main>
                <slot />
            </main>
            <Footer />
        </div>
        <script is:inline>
            const audienceKey = 'audience_mode';
            const updateAudienceButtons = (value) => {
                document.querySelectorAll('[data-audience-toggle]').forEach((button) => {
                    const isActive = button.dataset.audienceValue === value;
                    button.classList.toggle('audience-active', isActive);
                    button.setAttribute('aria-pressed', isActive ? 'true' : 'false');
                });
            };

            const storedAudience = localStorage.getItem(audienceKey) || 'professional';
            document.documentElement.dataset.audience = storedAudience;
            updateAudienceButtons(storedAudience);

            document.querySelectorAll('[data-audience-toggle]').forEach((button) => {
                button.addEventListener('click', () => {
                    const next = button.dataset.audienceValue || 'professional';
                    localStorage.setItem(audienceKey, next);
                    document.documentElement.dataset.audience = next;
                    updateAudienceButtons(next);
                });
            });
        </script>
    </body>
</html>
