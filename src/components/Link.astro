---
import { cn } from "../lib/utils";
const { href, class: className, ...rest } = Astro.props;
---

<a
  href={href}
  class={cn(
    "inline-block text-current hover:text-foreground transition-colors text-sm sm:text-base underline underline-offset-4 decoration-border hover:decoration-foreground",
    className,
  )}
  {...rest}
>
  <slot />
</a>
