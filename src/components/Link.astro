---
import { cn } from "../lib/utils";
const { href, class: className, ...rest } = Astro.props;
---

<a
  href={href}
  class={cn(
    "inline-flex items-center text-[11px] font-mono uppercase tracking-[0.3em] text-muted-foreground hover:text-foreground transition-colors",
    className,
  )}
  {...rest}
>
  <slot />
</a>
