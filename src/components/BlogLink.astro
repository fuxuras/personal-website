---
const {href, date, text, isActive = false,} = Astro.props;
---

<a 
    href={href}
    class:list={[
        "p-2 rounded-lg transition-colors flex gap-2",
        {
            "bg-neutral-950 text-white": isActive,
            "hover:bg-neutral-200": !isActive
        }
    ]}
>
    <div class="flex flex-col">
        {text} 
        <small class:list={[{"text-neutral-300":isActive,"text-neutral-600":!isActive}]}>{date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</small>
    </div>
</a>