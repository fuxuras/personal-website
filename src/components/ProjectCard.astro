--- 
import { Icon } from "astro-icon/components";

const { project } = Astro.props;
---

<div class="h-full flex flex-col rounded-lg border border-neutral-200 bg-white p-6 shadow-md">
    <h3 class="text-lg font-bold text-neutral-900">{project.data.title}</h3>
    <p class="mt-2 text-sm text-neutral-600 flex-grow">{project.data.description}</p>

    <div class="mt-4 flex flex-wrap gap-2">
        {project.data.tags.map((tag: string) => (
            <span class="rounded-full bg-neutral-100 px-2.5 py-0.5 text-xs font-medium text-neutral-700">
                {tag}
            </span>
        ))}
    </div>

    <div class="mt-6 flex items-center gap-4 text-sm">
        {project.data.repoUrl && (
            <a href={project.data.repoUrl} target="_blank" class="flex items-center gap-1.5 font-medium text-neutral-600 hover:text-neutral-900">
                <Icon name="simple-icons:github" class="size-4" />
                <span>GitHub</span>
            </a>
        )}
        {project.data.liveUrl && (
            <a href={project.data.liveUrl} target="_blank" class="flex items-center gap-1.5 font-medium text-blue-600 hover:text-blue-800">
                <Icon name="heroicons:arrow-top-right-on-square" class="size-4" />
                <span>Live Demo</span>
            </a>
        )}
    </div>
</div>