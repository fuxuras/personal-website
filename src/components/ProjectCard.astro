--- 
import { Icon } from "astro-icon/components";

const { project } = Astro.props;
---

<div class="h-full flex flex-col tile p-5 last:border-b-0">
    <h3 class="text-base font-semibold tracking-tight">{project.data.title}</h3>
    <p class="mt-2 text-sm text-muted-foreground flex-grow">{project.data.description}</p>

    <div class="mt-4 flex flex-wrap gap-2">
        {project.data.tags.map((tag: string) => (
            <span class="border border-border px-2.5 py-0.5 text-[11px] uppercase tracking-[0.2em] font-mono text-muted-foreground">
                {tag}
            </span>
        ))}
    </div>

    <div class="mt-6 flex items-center gap-4 text-sm">
        {project.data.repoUrl && (
            <a href={project.data.repoUrl} target="_blank" class="flex items-center gap-1.5 text-xs uppercase tracking-[0.2em] font-mono text-muted-foreground hover:text-foreground">
                <Icon name="simple-icons:github" class="size-4" />
                <span>GitHub</span>
            </a>
        )}
        {project.data.liveUrl && (
            <a href={project.data.liveUrl} target="_blank" class="flex items-center gap-1.5 text-xs uppercase tracking-[0.2em] font-mono text-foreground hover:text-muted-foreground">
                <Icon name="heroicons:arrow-top-right-on-square" class="size-4" />
                <span>Live Demo</span>
            </a>
        )}
    </div>
</div>
