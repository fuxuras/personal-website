---
import { cn } from "../lib/utils";
import { Icon } from "astro-icon/components";
const {
    href,
    target,
    text,
    isActive = false,
    iconName,
    class: className,
} = Astro.props;
---

<a
    href={href}
    target={target}
    class={cn(
        "inline-flex items-center gap-2 border border-border px-3 py-2 text-xs uppercase tracking-[0.25em] font-mono transition-colors",
        isActive ? "bg-foreground text-background" : "bg-background hover:bg-muted",
        className,
    )}
>
    {iconName && <Icon name={iconName} class="size-5 shrink-0" />}
    <span>{text}</span>
</a>
