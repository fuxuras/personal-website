---
type Props = {
  href: string;
}

const { href } = Astro.props;
---
 
<a href={href} class="group w-fit flex items-center gap-1 py-1.5 px-3 rounded border border-border hover:bg-accent hover:text-accent-foreground transition-colors duration-300 ease-in-out">
  <span class="text-lg font-thin text-muted-foreground group-hover:text-accent-foreground transition-colors">
    &lt;
  </span>
  <div class="text-sm">
    <slot/>
  </div>
</a>
