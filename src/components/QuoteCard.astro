--- 
import type { CollectionEntry } from "astro:content";

type Props = {
    quote: CollectionEntry<'commonplace'>;
}

const { quote } = Astro.props;
---

<div class="h-full flex flex-col p-6">
    <blockquote class="flex-grow space-y-3">
        <p class="text-base text-foreground">"{quote.data.text}"</p>
        {quote.data.subtext && <p class="text-sm text-muted-foreground">({quote.data.subtext})</p>}
    </blockquote>
    {quote.data.author && <footer class="mt-5 text-right text-xs uppercase tracking-[0.2em] font-mono text-muted-foreground">â€” {quote.data.author}</footer>}
</div>
