--- 
const { quote } = Astro.props;
---

<div class="h-full flex flex-col rounded-lg border border-neutral-200 bg-white p-6 shadow-md">
    <blockquote class="flex-grow">
        <p class="text-lg italic text-neutral-700">"{quote.text}"</p>
        {quote.subtext && <p class="mt-3 text-md text-neutral-500">({quote.subtext})</p>}
    </blockquote>
    <footer class="mt-4 text-right text-neutral-500 font-medium">- {quote.author}</footer>
</div>
