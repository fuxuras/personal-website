--- 
import type { CollectionEntry } from "astro:content";

type Props = {
    quote: CollectionEntry<'commonplace'>;
}

const { quote } = Astro.props;
---

<div class="h-full flex flex-col rounded-lg border border-border bg-card p-6 shadow-sm">
    <blockquote class="flex-grow">
        <p class="text-lg italic text-foreground">"{quote.data.text}"</p>
        {quote.data.subtext && <p class="mt-3 text-md text-muted-foreground">({quote.data.subtext})</p>}
    </blockquote>
    {quote.data.author && <footer class="mt-4 text-right text-muted-foreground font-medium">- {quote.data.author}</footer>}
</div>
