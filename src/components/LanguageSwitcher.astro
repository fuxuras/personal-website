---
import { getEntry } from "astro:content";
import { getEntryBySlug } from "astro:content";

const { lang, translationSlug } = Astro.props;

if (!lang || !translationSlug) {
  return null;
}

const translatedPost = await getEntry("blog", translationSlug);

if (!translatedPost) {
  return null;
}

const targetLang = lang === "en" ? "Turkish" : "English";
const href = `/blog/${translatedPost.slug}`;
---
<a href={href} class="text-xs uppercase tracking-[0.25em] font-mono text-muted-foreground hover:text-foreground transition-colors">
  Read in {targetLang} &rarr;
</a>
