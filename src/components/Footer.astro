---
import Container from "./Container.astro";
import { SOCIAL_LINKS } from "../consts.js";
import { Icon } from "astro-icon/components";
---

<footer class="site-footer">
  <Container>
    <div class="flex flex-wrap justify-between items-center gap-4 px-6">
      <div class="caption">&copy; {new Date().getFullYear()} Fuxuras</div>
      <div class="flex items-center gap-2">
          {SOCIAL_LINKS.map(link => (
              <a href={link.href} target="_blank" rel="noopener noreferrer" aria-label={link.ariaLabel} class="inline-flex items-center gap-2 px-3 py-2 text-xs uppercase tracking-[0.25em] font-mono text-muted-foreground hover:text-foreground transition-colors">
                  <Icon name={link.icon} class="w-4 h-4" />
                  <span>{link.name}</span>
              </a>
          ))}
      </div>
    </div>
  </Container>
</footer>
