---
import Container from "./Container.astro";
import { SOCIAL_LINKS } from "../consts.js";
import { Icon } from "astro-icon/components";
---

<footer>
  <Container>
    <div class="flex justify-between items-center">
      <div>
        &copy; {new Date().getFullYear()} Fuxuras
      </div>
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-2">
            {SOCIAL_LINKS.map(link => (
                <a href={link.href} target="_blank" rel="noopener noreferrer" aria-label={link.ariaLabel} class="p-2 rounded-full hover:bg-accent hover:text-accent-foreground transition-colors">
                    <Icon name={link.icon} class="w-5 h-5" />
                </a>
            ))}
        </div>
        <button
          id="theme-toggle-footer"
          aria-label="Toggle theme"
          class="flex h-10 w-10 items-center justify-center rounded-full hover:bg-accent hover:text-accent-foreground"
        >
          <Icon name="heroicons:sun" class="h-6 w-6 block dark:hidden" />
          <Icon name="heroicons:moon" class="h-6 w-6 hidden dark:block" />
        </button>
      </div>
    </div>
  </Container>
</footer>

<script>
  // Theme Toggle
  const themeToggleFooter = document.getElementById("theme-toggle-footer");

  themeToggleFooter?.addEventListener("click", () => {
    const isDark = document.documentElement.classList.toggle("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
  });
</script>
