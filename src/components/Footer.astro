---
import Container from "./Container.astro";
import { SOCIAL_LINKS } from "../consts.js";
import { Icon } from "astro-icon/components";
---

<footer class="site-footer">
  <Container>
    <div class="flex flex-wrap justify-between items-center gap-4 px-6">
      <div class="caption">&copy; {new Date().getFullYear()} Fuxuras</div>
      <div class="flex flex-wrap items-center gap-2">
          {SOCIAL_LINKS.map(link => (
              <a href={link.href} target="_blank" rel="noopener noreferrer" aria-label={link.ariaLabel} class="cta-link">
                  <Icon name={link.icon} class="w-4 h-4" />
                  <span>{link.name}</span>
              </a>
          ))}
          <button
            data-theme-toggle
            type="button"
            aria-label="Toggle theme"
            class="cta-link"
          >
            <Icon name="heroicons:sun" class="w-4 h-4 block dark:hidden" />
            <Icon name="heroicons:moon" class="w-4 h-4 hidden dark:block" />
            <span>Appearance</span>
          </button>
      </div>
    </div>
  </Container>
</footer>

<script>
  const toggles = document.querySelectorAll("[data-theme-toggle]");

  toggles.forEach((toggle) => {
    toggle.addEventListener("click", () => {
      const isDark = document.documentElement.classList.toggle("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
  });
</script>
